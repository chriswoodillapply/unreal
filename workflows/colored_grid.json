{
  "name": "Colored Grid",
  "description": "Creates a grid with different colored actors",
  "config": {
    "upsert_mode": true,
    "clear_before_execute": false,
    "save_after": true,
    "actor_id_prefix": "workflow_grid_"
  },
  "tasks": [
    {
      "name": "spawn_grid",
      "type": "SpawnGridTask",
      "params": {
        "rows": 3,
        "cols": 3,
        "spacing": 300,
        "shape": "sphere",
        "scale": 1.5
      }
    },
    {
      "name": "color_grid",
      "type": "ColorGridTask",
      "params": {
        "prefix": "workflow_grid_",
        "color_map": {
          "0_0": {"color": [1.0, 0.0, 0.0], "opacity": 1.0},
          "0_1": {"color": [0.0, 1.0, 0.0], "opacity": 1.0},
          "0_2": {"color": [0.0, 0.0, 1.0], "opacity": 1.0},
          "1_0": {"color": [1.0, 1.0, 0.0], "opacity": 1.0},
          "1_1": {"color": [1.0, 0.0, 1.0], "opacity": 1.0},
          "1_2": {"color": [0.0, 1.0, 1.0], "opacity": 1.0},
          "2_0": {"color": [1.0, 0.5, 0.0], "opacity": 1.0},
          "2_1": {"color": [0.5, 0.0, 1.0], "opacity": 1.0},
          "2_2": {"color": [0.0, 0.5, 0.5], "opacity": 1.0}
        }
      },
      "depends_on": ["spawn_grid"]
    }
  ]
}
