{
  "name": "Studio Lighting Setup",
  "description": "Professional three-point lighting with backdrop lights",
  "config": {
    "upsert_mode": true,
    "clear_before_execute": false,
    "save_after": true,
    "actor_id_prefix": "studio_"
  },
  "tasks": [
    {
      "name": "generate_studio_lights",
      "type": "LightsGeneratorTask",
      "params": {
        "default_intensity": 8000.0,
        "default_color": [1.0, 1.0, 1.0],
        "lights": [
          {
            "actor_id": "key_light",
            "light_type": "point",
            "location": [400, 300, 400],
            "intensity": 12000.0,
            "color": [1.0, 0.9, 0.8]
          },
          {
            "actor_id": "fill_light",
            "light_type": "point",
            "location": [-300, -200, 300],
            "intensity": 6000.0,
            "color": [0.6, 0.7, 1.0]
          },
          {
            "actor_id": "rim_light",
            "light_type": "spot",
            "location": [-200, 400, 200],
            "rotation": [0, -135, 0],
            "intensity": 10000.0,
            "color": [1.0, 1.0, 1.0],
            "inner_cone_angle": 15.0,
            "outer_cone_angle": 35.0
          },
          {
            "actor_id": "backdrop_left",
            "light_type": "spot",
            "location": [-600, -400, 200],
            "rotation": [0, 45, 0],
            "intensity": 8000.0,
            "color": [0.3, 0.5, 1.0],
            "outer_cone_angle": 50.0
          },
          {
            "actor_id": "backdrop_right",
            "light_type": "spot",
            "location": [-600, 400, 200],
            "rotation": [0, -45, 0],
            "intensity": 8000.0,
            "color": [1.0, 0.4, 0.8],
            "outer_cone_angle": 50.0
          }
        ]
      }
    },
    {
      "name": "create_all_lights",
      "type": "ForEachLightTask",
      "params": {
        "lights_input": "generate_studio_lights.lights",
        "use_registry": true
      },
      "depends_on": ["generate_studio_lights"]
    }
  ]
}
