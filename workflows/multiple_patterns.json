{
  "name": "Multiple Patterns",
  "description": "Creates grid, circle, and spiral patterns in parallel",
  "config": {
    "upsert_mode": false,
    "clear_before_execute": true,
    "save_after": false,
    "actor_id_prefix": "pattern_"
  },
  "tasks": [
    {
      "name": "clear_all",
      "type": "ClearLevelTask"
    },
    {
      "name": "grid",
      "type": "SpawnGridTask",
      "params": {
        "rows": 4,
        "cols": 4,
        "spacing": 150,
        "shape": "cube",
        "scale": 0.8
      },
      "depends_on": ["clear_all"]
    },
    {
      "name": "circle",
      "type": "SpawnCircleTask",
      "params": {
        "count": 12,
        "radius": 800,
        "shape": "sphere"
      },
      "depends_on": ["clear_all"]
    },
    {
      "name": "spiral",
      "type": "SpawnSpiralTask",
      "params": {
        "count": 20,
        "max_radius": 600,
        "height_increment": 50,
        "shape": "cylinder"
      },
      "depends_on": ["clear_all"]
    }
  ]
}
